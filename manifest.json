{
    "manifest_version": 2,

    "name": "toHttps",
    "description": "Redirects specified URLs.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.googleapis.com/",
        "http://fritz.box/"
    ],

    "background": {
        "scripts": ["main.js"],
        "persistent": true
    }
}
